<h1>Your garden!</h1>
Your garden measures your progress.
	<div>
	<table cellpadding="0" cellspacing="0" style="background:#563215;">
	<%@garden.size_y.times do |y|%>
		<tr>
			<%@garden.size_x.times do |x|%>
				<td>
					<%ground = @garden.grounds.find_by_x_and_y(x,y)%>
					<%if ground != nil%>
						<%if get_user.email.match(/cooley/)%>
							<p>Wetness:<%=h ground.wetness %></p>
							<p>Nutrients:<%=h ground.nutrients %>
						<%end%>
						<%ground.plants.each do |plant|%>
							<%if get_user.email.match(/cooley/)%>
								<p>Health:<%=h plant.health %></p>
								<p>Height:<%=h plant.height %></p>
								<p>Radius:<%=h plant.radius %></p>
								<p>Water needed:<%=h plant.plant_template.water_consumption %></p>
								<p>Nutrients needed:<%=h plant.plant_template.nutrients_consumption %></p>
							<%end%>
							<%if plant.plant_template.image_path != nil%>
								<%=image_tag("plants/#{plant.plant_template.image_path}",:title => plant.name)%><br>
							<%else%>
								<%=image_tag("plants/Drought_Leaf_48x48.png",:title => plant.name)%>
							<%end%>								
						<%end%>
					<%else%>
						<%=image_tag("plants/Dirt_48x48.png")%>
					<%end%>
				</td>
			<%end%>
		</tr>
	<%end%>
	</table>
	</div>

Last update: <%= @garden.updated_at %><br>
Current time: <%= Time.now %><br>
Seconds since last update: <%= (Time.now - @garden.updated_at).to_i %><br>
Seconds per tick: <%= @garden.time_per_tick%><br>
Estimated number of ticks: <%= (Time.now - @garden.updated_at).to_i/@garden.time_per_tick %><br>

<% form_tag :controller=>:garden, :action=>:tick, :id=>@garden do %>
  <p> How many ticks to do?
    <%= text_field_tag :repeat, nil, :size=>5 %>
    <%= submit_tag 'Tick!' %>
  </p>
<% end %>
<%= button_to "Tick once!", :controller=>:garden, :action=>:tick, :repeat=>1, :id=>@garden %>
<%= button_to "Back to your profile", :controller=>:users, :action=>:stats%>
<%= button_to "Purchase plants", :controller=>:store, :action=>:view %>