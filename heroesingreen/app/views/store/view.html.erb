<style = text/css>
	#plant_list {margin-left:20px; width:50%;}
	#plant {width:20%; position:relative; float:left;}
	#plant:hover {background-color:#f0fff0;}
	#plant_info {height:50px;}
	#plant_cost {align:center;}
	#plant_details {position:absolute; background-color:#f0fff0; left:65%; width:250px; padding: 0px 5px 0px 5px;}
	#plant_buy {align:center;}
	#store_buttons {clear:both; padding-top:50px;}
</style>

<script type=text/javascript>
	function showText(text)
	{
		if (!document.getElementById)
			return;
		document.getElementById("plant_details").innerHTML = text;
	}
	function hidetext(){
		if (!document.getElementById) 
			return;
		document.getElementById("plant_details").style.visibility = 'hidden';
	}
</script>

<h1 style="margin-top:-30px; padding-top:0px; font-size:x-large;">Welcome to the Store!</h1>

<div id="plant_details"></div>

<div id="plant_list">
<% @plant_templates.each do |plant_template| %>
  <div id="plant" onmouseover=showText('&lt;b&gt;Plant&nbsp;Details&lt;/b&gt;&lt;br&gt;&lt;br&gt;Name:&nbsp;<%=h plant_template.name%>&lt;br&gt;Cost:&nbsp;<%=h plant_template.cost%>&lt;br&gt;Virility:&nbsp;<%=h plant_template.virility%>&lt;br&gt;Layer&nbsp;Max:&nbsp;<%=h plant_template.layer_max%>&lt;br&gt;Health&nbsp;Max:&nbsp;<%=h plant_template.health_max%>&lt;br&gt;Water&nbsp;Consumption:&nbsp;<%=h plant_template.water_consumption%>&lt;br&gt;Nutrients&nbsp;Consumption:&nbsp;<%=h plant_template.nutrients_consumption%>&lt;br&gt;Light&nbsp;Min:&nbsp;<%=h plant_template.light_min%>&lt;br&gt;Light&nbsp;Max:&nbsp;<%=h plant_template.light_max%>&lt;br&gt;Vertical&nbsp;Rate:&nbsp;<%=h plant_template.vertical_rate%>&lt;br&gt;Radial&nbsp;Rate:&nbsp;<%=h plant_template.radial_rate%>&lt;br&gt;Density&nbsp;Rate:&nbsp;<%=h plant_template.density_rate%>'); onmouseout=hideText();>
  	<div id="plant_image"><%= image_tag("plants/#{plant_template.image_path}",:title => plant_template.name)%></div>
    <div id="plant_info"><%=h plant_template.name %> - <%=h plant_template.description %></div>
    <div id="plant_cost">Cost:<%=h plant_template.cost %></div>
    <div id="plant_buy"><%= button_to "Buy", :action=>:buy, :id=>plant_template.id %></div>
  </div>
<% end %>
</div>


<div id="store_buttons">
	<%= button_to "Earn more points", :controller=>:mission_game, :action=>:start%>
	<%= button_to "View your Garden", :controller=>:garden, :action=>:view %>
</div>