
<div id="simple_list">
<table>
  <tr>
    <th>Name</th>
    <th>Cost</th>
  </tr>  

<% @plant_templates.each do |plant_template| %>
  <tr>
    <td><%=h plant_template.name %></td>
    <td><%=h plant_template.cost %></td>

    <td><%= button_to "Buy", :action=>:buy, :id=>plant_template.id %></td>
  </tr>
<% end %>
</table>
</div>


<div id="full_list" style="display:none;" >
<table>
  <tr>
    <th>Name</th>
    <th>Cost</th>
    <th>Virility</th>
    <th>Image_Path</th>
    <th>Layer_Max</th>
    <th>Health_Max</th>
    <th>Water Min</th>
    <th>Water Max</th>
    <th>Water consumption</th>
    <th>Light Min</th>
    <th>Light Max</th>
    <th>Nutrients Min</th>
    <th>Nutrients Max</th>
    <th>Nutrients Consumption</th>
    <th>Vertical rate</th>
    <th>Radial rate</th>
    <th>Density rate</th>
  </tr>  

<% @plant_templates.each do |plant_template| %>
  <tr>
    <td><%=h plant_template.name %></td>
    <td><%=h plant_template.cost %></td>
    <td><%=h plant_template.virility %></td>
    <td><%=h plant_template.image_path %></td>
    <td><%=h plant_template.layer_max %></td>
    <td><%=h plant_template.health_max %></td>
    <td><%=h plant_template.water_min %></td>
    <td><%=h plant_template.water_max %></td>
    <td><%=h plant_template.water_consumption %></td>
    <td><%=h plant_template.light_min %></td>
    <td><%=h plant_template.light_max %></td>
    <td><%=h plant_template.nutrients_min %></td>
    <td><%=h plant_template.nutrients_max %></td>
    <td><%=h plant_template.nutrients_consumption %></td>
    <td><%=h plant_template.vertical_rate %></td>
    <td><%=h plant_template.radial_rate %></td>
    <td><%=h plant_template.density_rate %></td>
    <td><%= button_to "Buy", :action=>:buy, :id=>plant_template.id %></td>
  </tr>
<% end %>
</table>
</div>

<%= link_to_function "Show more/less detail", "$('full_list').toggle(); $('simple_list').toggle();" %>
<br />

<%= button_to "Earn more points", :controller=>:mission_game, :action=>:start%>
<%= button_to "View your Garden", :controller=>:garden, :action=>:view %>