<div class="fullHeightPage">
	<div class="header">
		<div class="mainCol">
			<a href="/" class="logo" alt="Heroes in Green" title="Go to home page"></a>
			<%if false%>
				<div id="header-right">
					<div id="userMod">
						<%if user_signed_in? %>
							Hello <%=h current_user.email%>! <%if @level%>You are a <b><%=@level.title%></b>!<%end%><br/>
							You've conserved over <%=h current_user.avail_points%>lbs of CO2!<br/>
							<%= link_to "Logout", destroy_user_session_path %>
						<%else%>
							<% form_tag :controller => "account", :action => "login" do%>
								<div id="login">
									<%= text_field_tag :email, params[:email] %>
									<%= password_field_tag :password, params[:password] %>
								</div>
								<div id="register">Not a hero yet?  <a href="/account/register/">Register</a>!</div>
								<div id="signin"><%= submit_tag "Sign In" %></div>
							<% end %>
						<%end%>
					</div>
				</div>
			<%end%>
			<div class="headerLinks">
				<div id="myMissions" class="headerLink"><%= link_to "Do Missions", :controller=>:mission_game, :action=>:find_mission%></div><!--
				--><div id="myGarden" class="headerLink"><%=link_to "My Garden", :controller=>:garden, :action=>:view%></div><!--
				--><div id="myHome" class="headerLink"><%=link_to "My Home", :controller=>:account, :action=>:home%></div><!--
				<div class="headerLink"><a href="#">Team Homepage</a></div>-->
			</div>
		</div>
	</div>
	<!-- _footer will close fullHeightPage -->