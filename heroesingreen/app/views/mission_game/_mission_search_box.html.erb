<%-content_for :head_content do %>
	<%= stylesheet_link_tag 'mission_search_box' %>
<% end-%>
<div class="search_box">
	<h2>Mission Search</h2>
	<%search_term ||= ''%>
	<%form_tag :action=>'search' do%>
		<%=text_field_tag 'search_text', search_term, :size=>50%><br/>
		<%=submit_tag "What missions await?"%>
	<%end%>	
</div>
<div id="search_by_tags">
	<h2>Search by tags</h2>
	<%if @mission_tags && @mission_tags.size > 0%>
		<% @mission_tags.each do |mt| %>
	    	<a href="/mission_game/search/<%=h mt.id%>"><%=h mt.mission_tag %></a><br/>
		<% end %>
	<% end %>
</div>