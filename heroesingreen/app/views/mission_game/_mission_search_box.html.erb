<%-content_for :head_content do %>
	<%= stylesheet_link_tag 'mission_search_box' %>
	<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.4/jquery.min.js"></script>

  <%=javascript_include_tag "./fancybox/jquery.fancybox-1.3.4.pack.js"%>
 <%= stylesheet_link_tag './fancybox/jquery.fancybox-1.3.4' %>

  <script type="text/javascript">
    $(document).ready(function() {
      $("#various1").fancybox({
        'titlePosition'   : 'inside',
        'transitionIn'    : 'none',
        'transitionOut'   : 'none'
      });

      $("a[rel=mission_text]").fancybox({
        'titlePosition'   : 'inside',
        'transitionIn'    : 'none',
        'transitionOut'   : 'none',
        'showNavArrows'   : 'false'
      });

      $("#various3").fancybox({
        'width'       : '75%',
        'height'      : '75%',
        'autoScale'     : false,
        'transitionIn'    : 'none',
        'transitionOut'   : 'none',
        'type'        : 'iframe'
      });
    });
  </script>
<% end-%>
<div class="search_box">
	<h2>Mission Search</h2>
	<%search_term ||= ''%>
	<%form_tag :action=>'search' do%>
		<%=text_field_tag 'search_text', search_term, :size=>50%><br/>
		<%=submit_tag "What missions await?"%>
	<%end%>	
</div>

<div id="search_mission_list">
    
<table>
  <tr>
    <th>Mission ID</th>
    <th>Title</th>
    <!--<th>Intro</th>
    <th>Description</th>
    <th>Task</th>-->
    <th>Reward</th>
    <th>Points</th>
    <th>Repeatable</th>
    <th>Unitpoints</th>
    <th>Unit</th>
    <th>More info</th>
	<th>Tags</th>
  </tr>

<% @missions.each do |mission| %>
  <tr>
    <td><%=h @m_count %></td>
    <td><%=h mission.title %></td>
    <!--<td><%=h mission.intro %></td>
    <td><%=h mission.description %></td>
    <td><%=h mission.task %></td>-->
    <td><%=h mission.reward %></td>
    <td><%=h mission.points %></td>
    <td><%=h mission.repeatable %></td>
    <td><%=h mission.unitPoints %></td>
    <td><%=h mission.unit %></td>
	<td><% mission.mission_tags.each do |mission_tag| %>
		<%=h mission_tag.mission_tag %>
		<% end %>
	</td>
    <td><a rel="mission_text" href="#inline<%= @m_count %>" title="<%=h mission.title %>">popup</a></td>
  </tr>
  
  <div style="display: none;">
    <div id="inline<%= @m_count %>" style="width:400px;height:100px;overflow:auto;">
      <%=h mission.reward %>
    </div>
  </div>
  <% @m_count = @m_count+1%>
<% end %>

</table>
</div>