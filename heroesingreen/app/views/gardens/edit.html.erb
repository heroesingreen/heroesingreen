<h1>Editing garden</h1>

<% form_for(@garden) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :size_x %><br />
    <%= f.text_field :size_x %>
  </p>
  <p>
    <%= f.label :size_y %><br />
    <%= f.text_field :size_y %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @garden %> |
<%= link_to 'Back', gardens_path %>