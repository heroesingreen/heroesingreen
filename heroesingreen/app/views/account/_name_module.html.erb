<br/>
<%if @user.first_name%>
	<span class="name">Welcome <%=@user.first_name%>!</span>
<%else%>
	<span class="name">Welcome <%=@user.email%>!</span><p/>
	<span class="enter_name">
	<% form_for :user, @user do |f| %>
		<div class="line">
			<div class="unit w1of3">
				Hey! I have a name you know...<br />
				<%= f.text_field :first_name, :size=>30, :maxlength=>30%>
			</div>
			<div class="lastUnit">
				<%= f.submit 'Remember my name!', :style=>"margin-top:0"%>
			</div>
		</div>
	<% end %>
	</span>
<%end%>