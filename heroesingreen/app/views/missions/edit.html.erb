<%= stylesheet_link_tag 'admin' %>
<!DOCTYPE html>
<html>
<head>
  <link href="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8/themes/base/jquery-ui.css" rel="stylesheet" type="text/css"/>
  <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.5/jquery.min.js"></script>
  <script src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8/jquery-ui.min.js"></script>
  <style type="text/css">
#selectable .ui-selecting {
	background: silver;
}
#selectable .ui-selected {
	background: gray;
}
</style>

  <script>
  $(document).ready(function() {
    $("#selectable").selectable({
		selected: function (event, ui) {
      	 console.log($(".ui-selected"));
	}
  });
	});


  </script>
</head>

<body>

<h1>Editing mission</h1>

<% form_for(@mission) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <div class="row">
  	<div class="left">    
    	<%= f.label :intro %> <br />
    	<%= f.text_area :intro %>
  	</div>
  	<div class="center">
		<%= f.label :description %><br />
    	<%= f.text_area :description %>
  	</div>
  </div>
<div class="row">
  <div class="left">
    <%= f.label :task %><br />
    <%= f.text_area :task %>
  </div>
  <div class="right">
    <%= f.label :reward %><br />
    <%= f.text_field :reward %>
  </div>
</div>
  <div class="points">
    <%= f.label :points %><br />
    <%= f.text_field :points %>
  </div>
  <div class = "repeatable">
 	<%= f.select("repeatable", Mission::MISSION_TYPE_NAMES.to_a.collect{ |value, name| [name, value] }) %>
  </div>
  <p>
    <%= f.label :unitPoints %><br />
    <%= f.text_field :unitPoints %>
  </p>
  <p>
    <%= f.label :unit %><br />
    <%= f.text_field :unit %>
  </p>
	<p>
</div>
	<div class="left">

		<% @mission_tags.each do |mission_tag| %>
		
			<%= check_box_tag "mission[mission_tag_ids][]", mission_tag.id, @mission.mission_tags.include?(mission_tag)  %>
			<%= mission_tag.mission_tag %><br />
      	<% end -%>

	</p>
	<p>
	<div class="center">
		
    	<%= f.submit 'Update' %>
	
	</div>
	</p> 
<% end %>
<br />

<p>
<%= link_to 'Show', @mission %> |
<%= link_to 'Back', missions_path %>
</p>


</body>
</html>
