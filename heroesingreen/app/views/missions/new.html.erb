<%= stylesheet_link_tag 'admin' %>

<h1>New mission</h1>

<% form_for(@mission) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <div class="row">
  	<div class="left">    
    	<%= f.label :intro %> <br />
    	<%= f.text_area :intro %>
  	</div>
  	<div class="right">
		<%= f.label :description %><br />
    	<%= f.text_area :description %>
  	</div>
  </div>
<div class"row">
  <div class="left">
    <%= f.label :task %><br />
    <%= f.text_area :task %>
  </div>
  <div class="right">
    <%= f.label :reward %><br />
    <%= f.text_field :reward %>
  </div>
</div>
  <div class="points">
    <%= f.label :points %><br />
    <%= f.text_field :points %>
  </div>
  <div class = "repeatable">
 	<%= f.select("repeatable", Mission::MISSION_TYPE_NAMES.to_a.collect{ |value, name| [name, value] }) %>
  </div>
  <p>
    <%= f.label :unitPoints %><br />
    <%= f.text_field :unitPoints %>
  </p>
  <p>
    <%= f.label :unit %><br />
    <%= f.text_field :unit %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
	
<% end %>

<%= link_to 'Back', missions_path %>