

<h1>New mission</h1>

<% form_for(@mission) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>

  	<div class="left">    
    	<%= f.label :intro %> <br />
    	<%= f.text_area :intro %>
  	</div>
  	<div class="right">
		<%= f.label :description %><br />
    	<%= f.text_area :description %>
  	</div>


  <div class="left">
    <%= f.label :task %><br />
    <%= f.text_area :task %>
  </div>
  <div class="right">
	<p>
		<%= f.label :reward %><br />
		<%= f.text_field :reward %>
	</p>
	<div class="points">
		<%= f.label :points %><br />
		<%= f.text_field :points %>
	</div>
	<div class = "repeatable">
		<%= f.label :repeatable %><br />
		<%= f.select("repeatable", Mission::MISSION_TYPE_NAMES.to_a.collect{ |value, name| [name, value] }) %>
	</div>
	<p>
		<%= f.label :unitPoints %><br />
		<%= f.text_field :unitPoints %>
	</p>
	<p>
		<%= f.label :unit %><br />
		<%= f.text_field :unit %>
	</p>
	
	<p>
		<%= f.label :cost %><br />
		<%= f.text_field :cost %>
	</p>
	
	<p>
		<%= f.label :effort %><br />
		<%= f.text_field :effort %>
	</p>
  
	<p>
		<%= f.label :duration %><br />
		<%= f.text_field :duration %>
	</p>
  </div>

  <div class="clear"></>

<br />
 <div class="left">
  <p>
    <%= f.submit 'Create' %>
    <%= f.submit 'Create Another'%>
		
	<%= link_to 'Back', missions_path %>



  </p> 
 </div>

	
<% end %>

